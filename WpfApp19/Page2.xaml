<Page x:Class="WpfApp19.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp19"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid Background="LightSteelBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Задание 2" FontSize="40" TextAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <TextBlock FontSize="30" Text="Введите число" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
        <TextBox Name="AA" FontSize="30" VerticalAlignment="Center" Margin="5" Grid.Row="1" Grid.Column="1"/>
        <Button Click="Button_Click" Content="Найти" FontSize="30" Grid.Row="3" Height="60" Width="150"/>
        <Button Click="Button_Click_1" Content="Сумма ответов первого и второго задания" FontSize="15" Grid.Row="3" Height="60" Width="350" Grid.Column="1"/>
    </Grid>
</Page>
